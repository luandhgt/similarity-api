# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.development or .env.production and fill in your values
# Use absolute paths for Windows (C:\path\to\folder) or Ubuntu (/home/user/folder)

# =============================================================================
# ENVIRONMENT MODE
# =============================================================================
ENV=development

# =============================================================================
# API KEYS
# =============================================================================
VOYAGE_API_KEY=your-voyage-api-key-here

# LLM Provider Selection: "claude", "chatgpt", or "gemini"
LLM_PROVIDER=claude

# Claude API (Anthropic)
CLAUDE_API_KEY=your-claude-api-key-here

# OpenAI API (ChatGPT)
OPENAI_API_KEY=your-openai-api-key-here

# Google API (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=event_user
DB_PASS=your-password-here
DB_NAME=event_dev

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# PATH CONFIGURATION - MUST BE ABSOLUTE PATHS OR RELATIVE TO PROJECT ROOT
# =============================================================================
# UBUNTU EXAMPLE:
# SHARED_UPLOADS_PATH=/media/luanpc/Video/shared/uploads
# MODELS_PATH=/media/luanpc/Video/image-similarity-api/models
# INDEX_PATH=/media/luanpc/Video/image-similarity-api/index
# LOGS_DIR=/media/luanpc/Video/image-similarity-api/logs

# WINDOWS EXAMPLE:
# SHARED_UPLOADS_PATH=C:\\Users\\YourName\\shared\\uploads
# MODELS_PATH=C:\\Users\\YourName\\image-similarity-api\\models
# INDEX_PATH=C:\\Users\\YourName\\image-similarity-api\\index
# LOGS_DIR=C:\\Users\\YourName\\image-similarity-api\\logs

SHARED_UPLOADS_PATH=/media/luanpc/Video/shared/uploads
MODELS_PATH=models
INDEX_PATH=index
LOGS_DIR=logs

# =============================================================================
# PLACES365 MODEL CONFIGURATION
# =============================================================================
PLACES365_MODEL_ARCH=resnet50
PLACES365_MODEL_FILE=resnet50_places365.pth.tar
PLACES365_NUM_CLASSES=365

# =============================================================================
# FAISS INDEX CONFIGURATION
# =============================================================================
FAISS_INDEX_TYPE=IndexFlatL2
FAISS_DIMENSION=2048

# =============================================================================
# IMAGE PROCESSING CONFIGURATION
# =============================================================================
MAX_IMAGE_SIZE=10485760
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff,tif,webp
IMAGE_RESIZE_WIDTH=224
IMAGE_RESIZE_HEIGHT=224

# =============================================================================
# TEXT EMBEDDING CONFIGURATION
# =============================================================================
VOYAGE_MODEL=voyage-2
VOYAGE_INPUT_TYPE=document
TEXT_EMBEDDING_DIMENSION=1024

# =============================================================================
# SIMILARITY SEARCH CONFIGURATION
# =============================================================================
TOP_K_RESULTS=10
TEXT_SIMILARITY_THRESHOLD=0.7
IMAGE_SIMILARITY_THRESHOLD=0.8
COMBINED_SIMILARITY_WEIGHT_TEXT=0.5
COMBINED_SIMILARITY_WEIGHT_IMAGE=0.5

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# The selected provider (LLM_PROVIDER) will use its corresponding settings

# Claude Configuration (Context: 200K tokens)
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=8000       # Max OUTPUT tokens (conservative). Can increase: 16K, 32K, or 64K
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=300

# OpenAI (ChatGPT) Configuration
# Models: gpt-4o (16K), gpt-5-chat (16K), gpt-5 (128K), gpt-5-pro (128K), gpt-5-mini (128K)
# Pricing: gpt-5-pro ($15 input/$120 output per 1M tokens - most expensive!)
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=128000      # Max OUTPUT tokens: gpt-4o/5-chat: 16K | gpt-5/5-pro/5-mini: 128K
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=300

# Google (Gemini) Configuration
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/image-similarity-api.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKER_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10
CACHE_ENABLED=true
CACHE_TTL=3600
